# -----------------
# Development config
# -----------------

# FastAPI
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=supersecretdevkey
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (local Postgres from docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=3883
POSTGRES_DB=get-course
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Alembic
ALEMBIC_DATABASE_URL=${DATABASE_URL}

# CORS (allow local frontend + docs)
# CORRECTED: Must be a JSON array string with escaped double quotes
CORS_ORIGINS="[\"http://localhost:3000\", \"http://127.0.0.1:3000\"]"

# Logging
LOG_LEVEL=debug